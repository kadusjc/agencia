  <body ng-app="agencia">

    <div class="container">
      <div class="row">
        <div class="col-md-7" id="home">
          <img src="img/logo.png" class="img-responsive"/>
        </div>
        <div class="col-md-5" ng-controller="SigninController">
          <br/><br/><br/>
          <form class="form-inline" ng-submit="authenticate()" role="form">
            <div class="form-group">
              <i class="glyphicon glyphicon-lock login-locker"></i>
            </div>
            <div class="form-group">
              <label class="sr-only" for="login">Login</label>
              <input type="email" class="form-control" ng-model="user.email" placeholder="Login">
            </div>
            <div class="form-group">
              <label class="sr-only" for="password">Senha</label>
              <input type="password" class="form-control" ng-model="user.password" placeholder="Senha">
            </div>
            <button type="submit" class="btn btn-default">Ok!</button>
            <p>
              <a href="#">Esqueci minha senha</a>
            </p>
          </form>
        </div>
      </div>
    </div>

    <ng-view></ng-view>

    <hr class="featurette-divider">

    <footer>
      <p class="pull-right">
        <a href="#home">Voltar para Home</a>
      </p>
      <p>&copy; 2014 Ag&ecirc;ncia Namoro Gay &middot; <a href="#politica" id="politica-link">Pol&iacute;tica de privacidade</a> &middot;
      </p>
    </footer>

